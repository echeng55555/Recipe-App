<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/favouriteRecipe"
        android:layout_width="0dp"
        android:layout_height="@android:dimen/app_icon_size"
        android:backgroundTint="@color/Lavender"
        android:gravity="center_vertical"
        android:text="Favourite Recipe"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/delete_background"
        android:scaleType="center"
        android:src="@drawable/delete_foreground"
        app:fabCustomSize="50sp"
        app:fabSize="normal"
        app:layout_constraintLeft_toRightOf="@id/favouriteRecipe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="60sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.84" />

</androidx.constraintlayout.widget.ConstraintLayout>